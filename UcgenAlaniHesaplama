import java.util.Scanner;
public class PatikaUcgenAlaniHesaplama {
    public static void main(String[] args) {
        int a , b , c ;
        double u , alan ;
        Scanner kenar = new Scanner(System.in);

        System.out.print("Üçgenin 1. Kenar Uzunluğunu Giriniz : ");
        a = kenar.nextInt();
        System.out.print("Üçgenin 2. Kenar Uzunluğunu Giriniz : ");
        b = kenar.nextInt();
        System.out.print("Üçgenin 3. Kenar Uzunluğunu Giriniz : ");
        c = kenar.nextInt();
        u = (a + b + c)  / 2.0;
        alan = Math.sqrt(u*(u-a)*(u-b)*(u-c));
        System.out.println("Kenarları Verilen Üçgenin Alanı : " + alan);

    }
}
